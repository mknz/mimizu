{
  "name": "Mirusan",
  "version": "0.1.0",
  "description": "PDF collection reader with built-in full-text search",
  "author": "mknz",
  "license": "GPL-3.0",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",
    "compile:elm": "elm-make ./src/Main.elm --output elm.js",
    "compile:babel": "babel pdf2txt.js > ./lib/pdf2txt.js",
    "compile": "npm-run-all -p  compile:*",
    "pack": "build --dir",
    "dist": "build",
    "build": "npm-run-all clean:dist compile dist",
    "mkdir": "mkdirp ./lib",
    "clean:dist": "rimraf ./dist",
    "elm:init": "elm-make --yes",
    "postinstall": "npm-run-all -p mkdir elm:init"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-preset-latest": "^6.22.0",
    "devtron": "^1.4.0",
    "electron": "^1.4.15",
    "electron-builder": "^13.3.0",
    "electron-debug": "^1.1.0",
    "elm": "^0.18.0",
    "eslint": "^3.11.1",
    "eslint-config-google": "^0.7.1",
    "npm-run-all": "^4.0.1",
    "rimraf": "^2.5.4"
  },
  "dependencies": {
    "babel-polyfill": "*",
    "babel-preset-latest": "^6.22.0",
    "child-process": "*",
    "electron-log": "^1.3.0",
    "electron-updater": "*",
    "i18n": "^0.8.3",
    "os-locale": "^2.0.0",
    "mkdirp": "^0.5.1"
  },
  "babel": {
    "sourceMaps": "inline",
    "presets": [
      "es2015"
    ]
  },
  "build": {
    "appId": "com.electron.mirusan",
    "mac": {
      "category": "Utility"
    },
    "files": [
      "**/*",
      "!**/tests",
      "!**/elm-stuff"
    ],
    "extraFiles": [
      "../search/dist/mirusan_search.exe"
    ],
    "win": {
      "publish": {
        "provider": "generic",
        "url": ""
      }
    }
  }
}
